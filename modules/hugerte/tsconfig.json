{
  "extends": "../../tsconfig.shared.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": ".",
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "hugerte": ["src/core/main/ts/api/Main"],
      "hugerte/core/*": ["src/core/main/ts/*"],
      "hugerte/themes/silver/demo/*": ["src/themes/silver/demo/ts/*"],
      "hugerte/themes/silver/resources/*": ["src/themes/silver/main/resources/*"],
      "hugerte/themes/silver/*": ["src/themes/silver/main/ts/*"],
      "hugerte/models/dom/demo/*": ["src/models/dom/demo/ts/*"],
      "hugerte/models/dom/*": ["src/models/dom/main/ts/*"],
      "hugerte/plugins/advlist/*": ["src/plugins/advlist/main/ts/*"],
      "hugerte/plugins/accordion/*": ["src/plugins/accordion/main/ts/*"],
      "hugerte/plugins/anchor/*": ["src/plugins/anchor/main/ts/*"],
      "hugerte/plugins/autolink/*": ["src/plugins/autolink/main/ts/*"],
      "hugerte/plugins/autoresize/*": ["src/plugins/autoresize/main/ts/*"],
      "hugerte/plugins/autosave/*": ["src/plugins/autosave/main/ts/*"],
      "hugerte/plugins/charmap/*": ["src/plugins/charmap/main/ts/*"],
      "hugerte/plugins/code/*": ["src/plugins/code/main/ts/*"],
      "hugerte/plugins/codesample/*": ["src/plugins/codesample/main/ts/*"],
      "hugerte/plugins/directionality/*": ["src/plugins/directionality/main/ts/*"],
      "hugerte/plugins/emoticons/*": ["src/plugins/emoticons/main/ts/*"],
      "hugerte/plugins/fullscreen/*": ["src/plugins/fullscreen/main/ts/*"],
      "hugerte/plugins/help/*": ["src/plugins/help/main/ts/*"],
      "hugerte/plugins/image/*": ["src/plugins/image/main/ts/*"],
      "hugerte/plugins/importcss/*": ["src/plugins/importcss/main/ts/*"],
      "hugerte/plugins/insertdatetime/*": ["src/plugins/insertdatetime/main/ts/*"],
      "hugerte/plugins/link/*": ["src/plugins/link/main/ts/*"],
      "hugerte/plugins/lists/*": ["src/plugins/lists/main/ts/*"],
      "hugerte/plugins/media/*": ["src/plugins/media/main/ts/*"],
      "hugerte/plugins/nonbreaking/*": ["src/plugins/nonbreaking/main/ts/*"],
      "hugerte/plugins/pagebreak/*": ["src/plugins/pagebreak/main/ts/*"],
      "hugerte/plugins/preview/*": ["src/plugins/preview/main/ts/*"],
      "hugerte/plugins/quickbars/*": ["src/plugins/quickbars/main/ts/*"],
      "hugerte/plugins/save/*": ["src/plugins/save/main/ts/*"],
      "hugerte/plugins/searchreplace/*": ["src/plugins/searchreplace/main/ts/*"],
      "hugerte/plugins/table/*": ["src/plugins/table/main/ts/*"],
      "hugerte/plugins/visualblocks/*": ["src/plugins/visualblocks/main/ts/*"],
      "hugerte/plugins/visualchars/*": ["src/plugins/visualchars/main/ts/*"],
      "hugerte/plugins/wordcount/*": ["src/plugins/wordcount/main/ts/*"],

      "@ephox/wrap-mcagar": ["src/core/test/ts/module/McAgar"]
    }
  },
  "include": [
    "src/core/main/ts",
    "src/core/demo/ts",
    "src/core/test/ts",
    "src/plugins/*/main/ts",
    "src/plugins/*/demo/ts",
    "src/plugins/*/test/ts",
    "src/themes/*/main/ts",
    "src/themes/*/main/resources",
    "src/themes/*/demo/ts",
    "src/themes/*/test/ts",
    "src/models/*/main/ts",
    "src/models/*/demo/ts",
    "src/models/*/test/ts",
    "src/core/dist/globals/hugerte/core/",
    "src/core/dist/globals/**/*.ts"
  ],
  "references": [
    { "path": "../acid" },
    { "path": "../agar" },
    { "path": "../alloy" },
    { "path": "../boulder" },
    { "path": "../bridge" },
    { "path": "../darwin" },
    { "path": "../katamari" },
    { "path": "../katamari-assertions" },
    { "path": "../mcagar" },
    { "path": "../polaris" },
    { "path": "../robin" },
    { "path": "../sand" },
    { "path": "../snooker" },
    { "path": "../sugar" }
  ]
}
